ifeq ($(ONLINE),yes)
CPPFLAGS += -D_ONLINE
endif

ifeq ($(NTPSA),yes)
CPPFLAGS += -D_NTPSA
endif

ifeq ($(USEGC),yes)
CPPFLAGS += -D_USEGC -Ilibs/gc/gc-7.2/include
endif

# end of makefile
