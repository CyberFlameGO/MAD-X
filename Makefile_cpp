#
# options flags
#

ifeq ($(DEBUG),yes)
CPPFLAGS += -D_DEBUG
endif

ifeq ($(MEMLEAKS),yes)
CPPFLAGS += -D_MEM_LEAKS
endif

ifeq ($(ONLINE),yes)
CPPFLAGS += -D_ONLINE
endif

ifeq ($(PLUGIN),yes)
CPPFLAGS += -D_PLUGIN
endif

# end of makefile
