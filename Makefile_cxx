vpath %.hpp src
vpath %.cpp src

CXX_HDR := $(notdir $(wildcard src/mad_*.hpp)) 
CXX_SRC := $(notdir $(wildcard src/mad_*.cpp))

ifeq ($(NTPSA),yes)
  CXX_HDR += tpsa.h 
  CXX_SRC += tpsa.cpp
  vpath tpsa.cpp libs/ptc/src
endif

#######################
# C++ dependencies (case not automatic!)

ifeq ($(CXXDEP),)

tpsa.o:         tpsa.h
mad_mkthin.o:   madx.h
mad_6track_name_mangler.o:	mad_6track_name_mangler.h

endif

# end of makefile
