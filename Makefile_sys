ifeq ($(OSTYPE),Darwin)
ifeq ($(ONLINE),yes)
$(error madx ONLINE is not supported on $(OSTYPE))
endif

ifeq ($(STATIC),yes)
$(error madx statically linked is not supported on $(OSTYPE))
endif
endif

# end of makefile
