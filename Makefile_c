CC_HDR := $(wildcard mad_*.h) 
CC_SRC := $(wildcard mad_*.c)

CC_HDR += rplot.h SDDS.h madx.h
CC_SRC += rplot.c gxx11c.c madxp.c

# files specific compiler flag
$(OBJDIR)/mad_gcst.o: CPPFLAGS += -D_VERSION=$(VERSION) \
                                  -D_VERSION_DATE=$(VERSION_DATE)

