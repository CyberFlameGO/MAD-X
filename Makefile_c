CC_HDR := $(wildcard mad_*.h) 
CC_SRC := $(wildcard mad_*.c)

CC_HDR += rplot.h SDDS.h madx.h
CC_SRC += rplot.c madxp.c

ifneq ($(findstring $(OSTYPE),Cygwin Windows),) # no X11
CC_SRC += gxx11psc.c
else
CC_SRC += gxx11c.c
endif

# files specific compiler flag
$(OBJDIR)/mad_gcst.o: CPPFLAGS += -D_VERSION=$(VERSION) \
                                  -D_VERSION_DATE=$(VERSION_DATE)

#######################
# C dependencies (case not automatic!)

ifeq ($(CDEP),)
$(info C dependencies are not computed automatically)

# all C files depend on madx.h
$(OBJDIR)/%.o: madx.h

endif

# end of makefile
