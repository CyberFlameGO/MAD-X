#
# all
#
.PHONY: all-linux32 all-linux64

all-linux32: madx-linux32 libmadx-linux32 libptc-linux32 numdiff-linux32
all-linux64: madx-linux64 libmadx-linux64 libptc-linux64 numdiff-linux64

#
# madx
#
.PHONY:             madx-linux          madx-linux-gnu
.PHONY:             madx-linux-lahey    madx-linux-nagfor
.PHONY:             madx-linux32        madx-linux64
.PHONY:             madx-linux32-gnu    madx-linux64-gnu
.PHONY:             madx-linux32-lahey  madx-linux64-lahey
.PHONY:             madx-linux32-nagfor madx-linux64-nagfor
madx-linux:         madx-linux32        madx-linux64
madx-linux-gnu:     madx-linux32-gnu    madx-linux64-gnu
madx-linux-lahey:   madx-linux32-lahey  madx-linux64-lahey
madx-linux-nagfor:  madx-linux32-nagfor madx-linux64-nagfor

madx-linux32:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=32 ONLINE=yes STATIC=yes Intel=yes APPENDLD=yes && \
     $(CP) madx32 $@

madx-linux64:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=64 ONLINE=yes STATIC=yes Intel=yes APPENDLD=yes && \
     $(CP) madx64 $@

madx-linux32-gnu:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=32 ONLINE=yes STATIC=yes GNU=yes APPENDLD=yes && \
     $(CP) madx32 $@

madx-linux64-gnu:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=64 ONLINE=yes STATIC=yes GNU=yes APPENDLD=yes && \
     $(CP) madx64 $@

madx-linux32-nagfor:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=32 ONLINE=yes STATIC=yes FC=nagfor APPENDLD=yes && \
     $(CP) madx32 $@

madx-linux64-nagfor:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=64 ONLINE=yes STATIC=yes FC=nagfor APPENDLD=yes && \
     $(CP) madx64 $@

madx-linux32-lahey:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=32 ONLINE=yes STATIC=yes FC=lf95 APPENDLD=yes && \
     $(CP) madx32 $@

madx-linux64-lahey:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory -j5 ARCH=64 ONLINE=yes STATIC=yes FC=lf95 APPENDLD=yes && \
     $(CP) madx64 $@

#
# libmadx
#
.PHONY:             libmadx-linux        libmadx-linux-gnu
.PHONY:             libmadx-linux32      libmadx-linux64
.PHONY:             libmadx-linux32-gnu  libmadx-linux64-gnu
libmadx-linux:      libmadx-linux32      libmadx-linux64
libmadx-linux-gnu:  libmadx-linux32-gnu  libmadx-linux64-gnu

libmadx-linux32:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/madx --no-print-directory -j5 ARCH=32 ONLINE=yes STATIC=yes Intel=yes APPENDLD=yes && \
     $(CP) libs/madx/libmadx32.a  $@.a  && ln -sf $@.a  libmadx32.a && \
     $(CP) libs/madx/libmadx32.so $@.so && ln -sf $@.so libmadx32.so

libmadx-linux64:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/madx --no-print-directory -j5 ARCH=64 ONLINE=no STATIC=no Intel=yes APPENDLD=yes && \
     $(CP) libs/madx/libmadx64.a  $@.a  && ln -sf $@.a  libmadx64.a && \
     $(CP) libs/madx/libmadx64.so $@.so && ln -sf $@.so libmadx64.so

libmadx-linux32-gnu:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/madx --no-print-directory -j5 ARCH=32 ONLINE=no STATIC=no $(GNUMAC) APPENDLD=yes && \
     $(CP) libs/madx/libmadx32.a  $@.a  && ln -sf $@.a  libmadx32.a && \
     $(CP) libs/madx/libmadx32.so $@.so && ln -sf $@.so libmadx32.so

libmadx-linux64-gnu:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/madx --no-print-directory -j5 ARCH=64 ONLINE=no STATIC=no $(GNUMAC) APPENDLD=yes && \
     $(CP) libs/madx/libmadx64.a  $@.a  && ln -sf $@.a  libmadx64.a && \
     $(CP) libs/madx/libmadx64.so $@.so && ln -sf $@.so libmadx64.so

#
# libptc
#
.PHONY:             libptc-linux        libptc-linux-gnu
.PHONY:             libptc-linux32      libptc-linux64
.PHONY:             libptc-linux32-gnu  libptc-linux64-gnu
libptc-linux:       libptc-linux32      libptc-linux64
libptc-linux-gnu:   libptc-linux32-gnu  libptc-linux64-gnu

libptc-linux32:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/ptc --no-print-directory -j5 ARCH=32 Intel=yes APPENDLD=yes && \
     $(CP) libs/ptc/libptc32.a  $@.a  && ln -sf $@.a  libptc32.a  && \
     $(CP) libs/ptc/libptc32.so $@.so && ln -sf $@.so libptc32.so


libptc-linux64:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/ptc --no-print-directory -j5 ARCH=64 Intel=yes APPENDLD=yes && \
     $(CP) libs/ptc/libptc64.a  $@.a  && ln -sf $@.a  libptc64.a  && \
     $(CP) libs/ptc/libptc64.so $@.so && ln -sf $@.so libptc64.so

libptc-linux32-gnu:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/ptc --no-print-directory -j5 ARCH=32 GNU=yes APPENDLD=yes && \
     $(CP) libs/ptc/libptc32.a  $@.a  && ln -sf $@.a  libptc32.a  && \
     $(CP) libs/ptc/libptc32.so $@.so && ln -sf $@.so libptc32.so

libptc-linux64-gnu:
	$E "*** Building $@"
	$_ $(MAKE) -C libs/ptc --no-print-directory -j5 ARCH=64 GNU=yes APPENDLD=yes && \
     $(CP) libs/ptc/libptc64.a  $@.a  && ln -sf $@.a  libptc64.a  && \
     $(CP) libs/ptc/libptc64.so $@.so && ln -sf $@.so libptc64.so

#
# numdiff
#
.PHONY:             numdiff-linux         numdiff-linux-gnu
.PHONY:             numdiff-linux32       numdiff-linux64
.PHONY:             numdiff-linux32-gnu   numdiff-linux64-gnu
numdiff-linux:      numdiff-linux32       numdiff-linux64
numdiff-linux-gnu:  numdiff-linux32-gnu   numdiff-linux64-gnu

numdiff-linux32:
	$E "*** Building $@"
	$_ $(MAKE) -C tools/numdiff --no-print-directory -j5 ARCH=32 Intel=yes APPENDLD=yes && \
     $(CP) tools/numdiff/numdiff32 $@ && ln -sf $@ numdiff32

numdiff-linux64:
	$E "*** Building $@"
	$_ $(MAKE) -C tools/numdiff --no-print-directory -j5 ARCH=64 Intel=yes APPENDLD=yes && \
     $(CP) tools/numdiff/numdiff64 $@ && ln -sf $@ numdiff64

numdiff-linux32-gnu:
	$E "*** Building $@"
	$_ $(MAKE) -C tools/numdiff --no-print-directory -j5 ARCH=32 GNU=yes APPENDLD=yes && \
     $(CP) tools/numdiff/numdiff32 $@ && ln -sf $@ numdiff32

numdiff-linux64-gnu:
	$E "*** Building $@"
	$_ $(MAKE) -C tools/numdiff --no-print-directory -j5 ARCH=64 GNU=yes APPENDLD=yes && \
     $(CP) tools/numdiff/numdiff64 $@ && ln -sf $@ numdiff64

# end of makefile
