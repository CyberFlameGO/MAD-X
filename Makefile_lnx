libptc-linux%: MAKE_ARGS  = PRJNAME=$@ DESTDIR=../../$(DESTDIR) APPENDLD=yes
libptc-linux%: MAKE_POST1 = ln -sf $(DESTDIR)/$@.a  && ln -sf $@.a
libptc-linux%: MAKE_POST2 = ln -sf $(DESTDIR)/$@.so && ln -sf $@.so

libptc-linux32:
	$E "*** Building $@"
