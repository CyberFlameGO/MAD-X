libptc-linux64:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=64 Intel=yes && $(MAKE_POST1) libptc64.a && $(MAKE_POST2) libptc64.so

libptc-linux32-gnu:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=32 GNU=yes && $(MAKE_POST1) libptc32.a && $(MAKE_POST2) libptc32.so

libptc-linux64-gnu:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=64 GNU=yes && $(MAKE_POST1) libptc64.a && $(MAKE_POST2) libptc64.so

#
# numdiff
#
.PHONY:             numdiff-linux         numdiff-linux-gnu
.PHONY:             numdiff-linux32       numdiff-linux64
.PHONY:             numdiff-linux32-gnu   numdiff-linux64-gnu
numdiff-linux:      numdiff-linux32       numdiff-linux64
numdiff-linux-gnu:  numdiff-linux32-gnu   numdiff-linux64-gnu

numdiff-linux%: DESTDIR  := $(DESTDIR)tools/numdiff
numdiff-linux%: MAKE_OPTS = -j5 --no-print-directory -C tools/numdiff
numdiff-linux%: MAKE_ARGS = PRJNAME=$@ DESTDIR=../../$(DESTDIR) APPENDLD=yes
numdiff-linux%: MAKE_POST = ln -sf $(DESTDIR)/$@ && ln -sf $@

numdiff-linux32:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=32 Intel=yes && $(MAKE_POST) numdiff32

numdiff-linux64:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=64 Intel=yes && $(MAKE_POST) numdiff64

numdiff-linux32-gnu:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=64 GNU=yes && $(MAKE_POST) numdiff64

numdiff-linux64-gnu:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=64 GNU=yes && $(MAKE_POST) numdiff64

# end of makefile
