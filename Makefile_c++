CXX_HDR := $(wildcard mad_*.hpp) 
CXX_SRC := $(wildcard mad_*.cpp)

ifeq ($(NTPSA),yes)
  CXX_HDR += tpsa.h 
  CXX_SRC += tpsa.cpp
endif

