# libs for ONLINE madx

ifeq ($(ONLINE),yes)

LIBS += -L$(CURDIR)/lib$(ARCH) -lSDDS1c -lSDDS1 -lrpnlib -lmdbmth -lmdblib -lgsl -lz

endif

# X11 on Unix

ifneq ($(OSTYPE),Win32)

LIBS += -L/usr/X11R6/lib -lX11

ifeq ($(OSTYPE),Linux)
LIBS += -lpthread     # X11 is threaded by default on Linux
endif

endif

# end of makefile
