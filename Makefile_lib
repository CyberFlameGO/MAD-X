# Online MAD-X

ifeq ($(ONLINE),yes)
LIBS += -Llib$(ARCH) -lSDDS1c -lSDDS1 -lrpnlib -lmdbmth -lmdblib -lgsl -lz
endif

# Garbage Collector

ifeq ($(USEGC),yes)
ifneq ($(OSTYPE),Windows)
LIBS += -Llibs$/gc -lgc$(ARCH)$(if $(findstring -gnu,$@),-gnu,-intel)
endif
endif

# Libraries on Linux

ifeq ($(OSTYPE),Linux)
LIBS   += $(if $(call eq,$(ARCH),32),$(call libdir,/usr/lib),) -lX11
LDLIBS += -lstdc++ -lm
endif

# Libraries on MacOSX

ifeq ($(OSTYPE),Darwin)
LIBS   += $(call libdir,/usr/X11/lib) -lX11
LDLIBS += -lstdc++ -lm
endif

# Libraries on Windows

ifeq ($(OSTYPE),Windows)
ifneq ($(LDNAME),ifort)
LDLIBS += -lstdc++ -lm
endif
endif

# end of makefile
