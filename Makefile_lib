# ONLINE madx

ifeq ($(ONLINE),yes)
LIBS += -Llib$(ARCH) -lSDDS1c -lSDDS1 -lrpnlib -lmdbmth -lmdblib -lgsl -lz
endif

# Garbage Collector

ifeq ($(USEGC),yes)
ifneq ($(OSTYPE),Windows)
LIBS += -Llibs$/gc -lgc$(ARCH)$(findstring -gnu,$@)
endif
endif

# Libraries on Linux

ifeq ($(OSTYPE),Linux)
ifeq ($(STATIC),yes)
LIBS += -Llib$(ARCH)
endif
LIBS += -lX11

ifeq ($(ARCH),32)
LDLIBS += -L/usr/lib
endif
LDLIBS += -lstdc++ -lpthread -lm
endif

# Libraries on MacOSX

ifeq ($(OSTYPE),Darwin)
LIBS += -L/usr/X11/lib -lX11.6
ifeq ($(LD),ifort)
LDLIBS += $(call GNULIB,libgfortran.a) $(call GNULIB,libquadmath.a)
endif
LDLIBS += -lstdc++
endif

# end of makefile
