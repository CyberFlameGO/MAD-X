#####################
# ICC specific
#

#
# preprocessor flags
#

CPPFLAGS += -D_ICC

###############
# C language
#

ifeq ($(CCNAME),icc)

#
# makedep
#

CDEP = $(CC) -MM

#
# compiler
#

CFLAGS = -m$(ARCH) -O$(NOPT) -std=c99 -Wall -Wcheck -Wp64 -c

#
# diagnostics
#

CFLAGS += -diag-disable 2259,1572,981 # -diag-enable port-win # -diag-enable sc2

#
# options flags
#

ifeq ($(DEBUG),yes)
CFLAGS += -g -gdwarf-2 -debug all -debug extended -traceback -check=conversions,stack,uninit
endif

ifeq ($(PROFILE),yes)
CFLAGS += -p
endif

ifeq ($(SHARED),yes)
CFLAGS += -fPIC
endif

ifeq ($(OPENMP),yes)
CFLAGS += -qopenmp
endif

#
# extra flags
#

CFLAGS += -mp1 -fp-model strict

endif

###############
# C++ language
#

ifeq ($(CXXNAME),icc)

#
# makedep
#

CXXDEP = $(CXX) -MM

#
# compiler
#

CXXFLAGS = -m$(ARCH) -O$(NOPT) -std=c++98 -Wall -Wcheck -Wp64 -c

#
# diagnostics
#

CXXFLAGS += -diag-disable 2259,1572,981 # -diag-enable port-win # -diag-enable sc2

#
# options flags
#

ifeq ($(DEBUG),yes)
CXXFLAGS += -g -gdwarf-2 -debug all -debug extended -traceback -check=conversions,stack,uninit
endif

ifeq ($(PROFILE),yes)
CXXFLAGS += -p
endif

ifeq ($(SHARED),yes)
CXXFLAGS += -fPIC
endif

ifeq ($(OPENMP),yes)
CXXFLAGS += -qopenmp
endif

#
# extra flags
#

CXXFLAGS += -mp1 -fp-model strict

endif

# end of makefile
