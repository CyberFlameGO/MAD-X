#
# makedep
#

CXXDEP = $(CXX) -MM

#
# preprocessor flags
#

CPPFLAGS += -D_GXX

#
# compiler
#

CXXFLAGS = -std=c++11 -m$(ARCH) -O$(NOPT) -Wall -W -Wextra -pedantic -c

#
# options flags
#

ifeq ($(DEBUG),yes)
CXXFLAGS += -g -ggdb
endif

ifeq ($(PROFILE),yes)
CXXFLAGS += -pg
endif

ifeq ($(SHARED),yes)
CXXFLAGS += -fPIC
endif

ifeq ($(OPENMP),yes)
CXXFLAGS += $(if $(filter $(<F),$(OPENMPFILES)),-fopenmp,)
endif

ifeq ($(SANITIZE),yes)
CXXFLAGS += -fsanitize=address -fno-omit-frame-pointer
endif

#
# extra flags
#

CXXFLAGS += -pipe

#
# diagnostics (g++ is the reference)
#

CXXFLAGS += -Wpointer-arith -Wcast-align -Wcast-qual -Winline \
            -Wchar-subscripts -Wwrite-strings -Wconversion -Wno-conversion

#           -Wfloat-equal -Wformat-nonliteral # not compatible with ugly MAD-X code...

ifeq ($(COVERAGE),yes)
CXXFLAGS += -fprofile-arcs -ftest-coverage
endif

# end of makefile
