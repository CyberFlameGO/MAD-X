.PHONY: clean cleanall

clean:
	$E "** Cleaning local files"
	$_ rm -f *.o
	$_ rm -f *.g90
	$_ rm -f *.mod
	$_ rm -f *.lst
	$_ rm -f core
	$_ rm -f *~

cleanall: clean
	$E "** Removing" $(OBJDIR)
	$_ rm -rf $(OBJDIR)
  
# end of makefile
