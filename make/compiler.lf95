# NOTE: link only on linux!
# does not link correctly on other platforms (MacOSX)
# 64 bits architecture are not supported, only for 32 bits builds

ifneq ($(ARCH),32)
$(error Lahey Fortran compiler build only 32 bits project, use ARCH=32)
endif

# attemp to find the gnu libs directory (Linux only)
ifeq ($(OSTYPE),Linux)
GNULIBS := -L$(dir $(shell $(CXX) $(CXXFLAGS) -print-file-name=libstdc++.a))
endif

#
# makedep
#

# lf95 does not compute fortran dependencies
# FDEP :=

#
# linker
#

LD      := $(FC)
LDFLAGS += -m$(ARCH)
LDLIBS  += $(GNULIBS) -lstdc++ -lgcc_eh

ifeq ($(STATIC),yes)
LDFLAGS += --static
endif

#
# basic flags
#

CPPFLAGS += -D_LF95
FFLAGS   := -Wa,--$(ARCH) --o2 --warn

# Trig too many warnings for the moment!
#FFLAGS   := -Wa,--$(ARCH) --f95 --o2 --warn

#
# options flags
#

ifeq ($(DEBUG),yes)
FFLAGS += -g --info --ap --chkglobal --lst --trap --verbose
endif

ifeq ($(PROFILE),yes) # not found in the doc
FFLAGS  += -pg
LDFLAGS += -pg
endif

ifeq ($(PLUGIN),yes) # not found in the doc
LDFLAGS += -dynamic
LDLIBS  += -ldl
endif

#
# extra flags
#

FFLAGS += --mod $(OBJDIR)

# end of makefile

