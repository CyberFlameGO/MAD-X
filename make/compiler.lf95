#
# makedep
#

# lf95 does not compute fortran dependencies
# FDEP :=

#
# linker
#

LD      := $(FC)
LDFLAGS += -Wa,--$(ARCH)
LDLIBS  += -lstdc++ -lgcc_eh

ifeq ($(STATIC),yes)
LDFLAGS += --static
endif

#
# basic flags
#

CPPFLAGS += -D_LF95
FFLAGS   := -Wa,--$(ARCH) -O --warn

# Trig too many warnings for the moment!
#FFLAGS   := -Wa,--$(ARCH) --f95 -O --warn

#
# options flags
#

ifeq ($(DEBUG),yes)
FFLAGS += -g --ap --info --chkglobal --lst --trap --verbose
endif

ifeq ($(PROFILE),yes)
FFLAGS  += -pg
LDFLAGS += -pg
endif

ifeq ($(PLUGIN),yes) # not found in the doc
LDFLAGS += -dynamic
LDLIBS  += -ldl
endif

#
# extra flags
#

FFLAGS += --mod $(OBJDIR)

# end of makefile

