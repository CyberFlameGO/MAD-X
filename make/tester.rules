.PHONY: tests tests-case $(tests-all) $(TESTS)

#
# all tests
#
tests-all: $(tests-all)

#
# fast tests only
#
tests: $(filter-out $(tests-long),$(tests-all))

#
# rule for one test
#
$(tests-all):
	$(run-test)

#
# check for directory existence
#
check-test-dirs := \
   $(foreach dir,$(tests-all),\
     $(call exists,tests/$(dir),invalid test directory tests/$(dir)))

# end of makefile
