.PHONY: tests tests-all check-tests-dirs $(tests-all) $(TESTS)

#
# all tests
#
tests-all: check-tests-dirs $(if $(TESTS),$(TESTS),$(tests-all))

#
# fast tests only
#
tests: check-tests-dirs $(if $(TESTS),$(TESTS),$(filter-out $(tests-long),$(tests-all)))

#
# rule for one test
#
$(if $(TESTS),$(TESTS),$(tests-all)):
	$(run-test)

#
# check for directory existence
#
check-tests-dirs:
	$(foreach dir,$(if $(TESTS),$(TESTS),$(tests-all)),\
     $(call exists,tests/$(dir),invalid test directory tests/$(dir)))

# end of makefile
