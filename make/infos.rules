.PHONY: info infoinc infoprj infoall

info:
	@ echo "Operating system                " = $(OSTYPE)-$(OSARCH)
	@ echo "Current directory               " = $(CURDIR)
	@ echo "Build   directory               " = $(OBJDIR)
	@ echo "C   makedep  settings           " = $(call CC_tr,$(CDEP) $(CPPFLAGS))
	@ echo "C++ makedep  settings           " = $(call CXX_tr,$(CXXDEP) $(CPPFLAGS))
	@ echo "F90 makedep  settings           " = $(call FC_tr,$(FDEP) $(CPPFLAGS))
	@ echo "C   compiler settings           " = $(call CC_tr,$(CC) $(CFLAGS) $(CPPFLAGS))
	@ echo "C++ compiler settings           " = $(call CXX_tr,$(CXX) $(CXXFLAGS) $(CPPFLAGS))
	@ echo "F90 compiler settings           " = $(call FC_tr,$(FC) $(FFLAGS) $(CPPFLAGS))
	@ echo "Linker       settings           " = $(call LD_tr,$(LD) $(LDFLAGS))
	@ echo "Libraries    settings           " = $(call LD_tr,$(LIBS) $(LDLIBS))

infoinc: info
	@ echo "C   compiler settings file      " = $(makedir)$/compiler.$(CCNAME)
	@ echo "C++ compiler settings file      " = $(makedir)$/compiler.$(CXXNAME)
	@ echo "F90 compiler settings file      " = $(makedir)$/compiler.$(FCNAME)
	@ echo "Linker       settings file      " = $(makedir)$/linker.$(LDNAME)

infoprj: infoinc
	@ echo "          project settings file " = $(PROJECT) $(VERSION) $(VERSION_DATE)
	@ echo "Cpp       project settings file " = $(FILE_CPP)
	@ echo "C         project settings file " = $(FILE_C)
	@ echo "C++       project settings file " = $(FILE_CXX)
	@ echo "F90       project settings file " = $(FILE_F90)
	@ echo "Libraries project settings file " = $(FILE_LIB)
	@ echo "System    project settings file " = $(FILE_SYS)

infoall: infoprj
	@ echo "Headers files                   " = $(HEADERS)
	@ echo "Sources files                   " = $(SOURCES)
	@ echo "Objects files                   " = $(OBJECTS)
	@ echo "Depends files                   " = $(DEPENDS)

# end of makefile
