.PHONY: $(PROJECT)

PRJNAME_LD := $(PRJNAME)$(if $(call eq,lib%,$(PROJECT)),$(SHARED_EXT),$(BINARY_EXT))
PRJNAME_AR := $(PRJNAME)$(if $(call eq,lib%,$(PROJECT)),$(STATIC_EXT),)

$(PROJECT): $(if $(LD),PRJNAME_LD,) $(if $(AR),PRJNAME_AR,)

ifneq ($(LD),)
PRJNAME_LD: $(OBJECTS)
	$E "*** Linking $(PRJNAME_LD)"
	$_ $(call LD_tr,$(LD) $(LDFLAGS) -o $(DESTDIR)$(PRJNAME_LD) $(addprefix $(OBJDIR)$/,$(^F)) $(LIBS) $(LDLIBS))
endif

ifneq ($(AR),)
PRJNAME_AR: $(OBJECTS)
	$E "*** Archiving $(PRJNAME_AR)"
	$_ $(call AR_tr,$(AR) $(ARFLAGS) -o $(DESTDIR)$(PRJNAME_AR) $(addprefix $(OBJDIR)$/,$(^F)))
endif

# end of makefile
