! Simple tracking test for LHC racetrack type element.
! tstTrack_ap_racetrack.madx

option,-echo,-info,-warn;

! **********  Apertures introduced **********
qd:multipole, knl={0,-0.0}, apertype= racetrack, aperture={0.002,0.0005,0.001};! H
!--------------------------------------------  syntax : hlimit,vlimit,radius
endmk:marker;

! ********** Define sequences
smachd: sequence, l= 2.0; 
qd, at= 1.00;
endmk, at= 2.0;
endsequence;


! ********** Define beam and use the sequence with it 
beam, sequence= smachd, particle= proton, energy= 450;
use,  sequence= smachd;

! ********** Track 10000 particles
track, onepass, onetable, file= "out_tstTrack_ap_racetrack_d", aperture, dump;
  n=0;  
  while(n<10000) {
     n= n+1; 
     start, x= -0.003+0.006*ranf(), 
            y= -0.0015+0.003*ranf(),
            px= 0, py= 0;
  }
  run, turns= 1; 
endtrack;


! ********** Plot the end distribution
system, "gnuplot < tstTrack_ap_racetrack.gnuplot";

!system, "rm out_tstTrack_ap_racetrack_fone out_tstTrack_ap_racetrack_done";

return;
