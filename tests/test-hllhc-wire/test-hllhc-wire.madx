!+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++;
!     Wire installation
!+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++;

if (mylhcbeam==1) { use,sequence=lhcb1; } else { use,sequence=lhcb2; };

!install markers for dump

!## IP3 ##!
ip3_dump_sta.b1: marker;
ip3_dump_mid.b1: marker;
ip3_dump_end.b1: marker;

use, sequence=lhcb1;
seqedit, sequence=lhcb1;
flatten;

install, element=ip3_dump_sta.b1, at=0, from=ip3;
install, element=ip3_dump_mid.b1, at=0, from=ip3;
install, element=ip3_dump_end.b1, at=0, from=ip3;

flatten;
endedit;
use, sequence=lhcb1;


if(ON_WIRE==1){

    print, text="Starting installation of wire in lhcb1";
    call, file="macro/wire_comp_macro_lhcb1.madx";



    !## IP1 ##!


! Wire compensator current in [q*c*Nb] for a wire 1m long

    I_wire_c_l1.b1 = (26.84233900);   ! in [q*c*Nb] for a wire 1m long. The plus (+) sign is for the compensation of the BBLR kicks if the wires are placed insite (use of electrons in the wire). The minus (-) is for no compensation (use of protons in the wire).
    I_wire_c_r1.b1 = (26.45635300);    ! in [q*c*Nb] for a wire 1m long. The plus (+) sign is for the compensation of the BBLR kicks if the wires are placed insite (use of electrons in the wire). The minus (-) is for no compensation (use of protons in the wire).

    if (I_wire_c_l1.b1==0){ swich_for_l1_wc_install=0; } else { swich_for_l1_wc_install=1; };
    if (I_wire_c_r1.b1==0){ swich_for_r1_wc_install=0; } else { swich_for_r1_wc_install=1; };
    

! wire compensator longitudinal and transverse position 

    wire_c_s_l1.b1 = -195; 	! The s position of the left wire compensator from the IP1 in [m] / =0 if no wire will installed.
    wire_c_s_r1.b1 = 195; 	! The s position of the right wire compensator from the IP1 in [m] / =0 if no wire will installed.
    wire_c_x_l1.b1 = (0.0);  	! The x distance of the left wire compensator from the weak beam in [m]. For up placement (outside of the crossing plain) use the plus (+) sing and for down placement (insite of the crossing plain) use the minus (-) sing.
    wire_c_y_l1.b1 = (0.00800000);  	! The y distance of the left wire compensator from the weak beam in [m]. For insite placement (between the weak and the strong beam) use the plus (+) sing and for outsite placement use the minus (-) sing.
    wire_c_x_r1.b1 = (0.0);  	! The x distance of the right wire compensator from the weak beam in [m]. For up placement (outside of the crossing plain) use the plus (+) sing and for down placement (insite of the crossing plain) use the minus (-) sing.
    wire_c_y_r1.b1 = (0.00800000);  	! The y distance of the right wire compensator from the weak beam in [m]. For insite placement (between the weak and the strong beam) use the plus (+) sing and for outsite placement use the minus (-) sing.  


    !## IP5 ##!


! Wire compensator current in [q*c*Nb] for a wire 1m long

    I_wire_c_l5.b1 = (26.84247000);    ! in [q*c*Nb] for a wire 1m long. The plus (+) sign is for the compensation of the BBLR kicks if the wires are placed insite (use of electrons in the wire). The minus (-) is for no compensation (use of protons in the wire).
    I_wire_c_r5.b1 = (26.45646200);    ! in [q*c*Nb] for a wire 1m long. The plus (+) sign is for the compensation of the BBLR kicks if the wires are placed insite (use of electrons in the wire). The minus (-) is for no compensation (use of protons in the wire).

    if (I_wire_c_l5.b1==0){ swich_for_l5_wc_install=0; } else { swich_for_l5_wc_install=1; };
    if (I_wire_c_r5.b1==0){ swich_for_r5_wc_install=0; } else { swich_for_r5_wc_install=1; };


! wire compensator longitudinal and transverse position

    wire_c_s_l5.b1 = -195;  	! The s position of the left wire compensator from the IP5 in [m] / =0 if no wire will installed.
    wire_c_s_r5.b1 = 195;  	! The s position of the right wire compensator from the IP5 in [m] / =0 if no wire will installed.
    wire_c_x_l5.b1 = (0.00800000);   ! The x distance of the left wire compensator from the weak beam in [m]. For insite placement (between the weak and the strong beam) use the plus (+) sing and for outsite placement use the minus (-) sing.
    wire_c_y_l5.b1 = (0.0);   ! The y distance of the left wire compensator from the weak beam in [m]. For up placement (outside of the crossing plain) use the plus (+) sing and for down placement (insite of the crossing plain) use the minus (-) sing.
    wire_c_x_r5.b1 = (0.00800000);   ! The x distance of the right wire compensator from the weak beam in [m]. For insite placement (between the weak and the strong beam) use the plus (+) sing and for outsite placement use the minus (-) sing.
    wire_c_y_r5.b1 = (0.0);   ! The y distance of the left wire compensator from the weak beam in [m]. For up placement (outside of the crossing plain) use the plus (+) sing and for down placement (insite of the crossing plain) use the minus (-) sing.



    if (wire_type==1) {
    
        ! On-off wire compensator
        
        !## IP1 ##!
        on_off_w_c_l1.b1 := 1; ! Wire compensator on  =1 / off =0
        on_off_w_c_r1.b1 := 1; ! Wire compensator on  =1 / off =0
        !## IP5 ##!
        on_off_w_c_l5.b1 := 1; ! Wire compensator on  =1 / off =0
        on_off_w_c_r5.b1 := 1; ! Wire compensator on  =1 / off =0
   
        exec, INSTALL_MADX_WIRE_COMP_LHCB1;
        
        !## IP1 ##!
        on_off_w_c_l1.b1 := 0;
        on_off_w_c_r1.b1 := 0;
        !## IP5 ##!
        on_off_w_c_l5.b1 := 0;
        on_off_w_c_r5.b1 := 0;
	};
	
	if (wire_type==2) { exec, INSTALL_SIXTRACK_WIRE_COMP_LHCB1;};
   

