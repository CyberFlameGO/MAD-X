if (not_a_mask==1){ xing1 = 250; xing5 = 250; } else { xing1 = 250; xing5 = 250; };
sep15=0.75;
xing8=-250; sep8=-2; on_lhcb=+1;
xing2= 170; sep2=2; on_alice=1;

on_crab1=-190; on_crab5=-190;
