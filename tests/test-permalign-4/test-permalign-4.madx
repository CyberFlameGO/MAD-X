beam;
!s1:rbend,  angle=0.01, l=1, k1=0.02 ;
s1:sbend,  l=1, angle=0.1, k1=0.02 ; 
myseq: sequence, l=1;
  s1, at:=0.5, dx=0.00, dtheta=0.;
endsequence;

use, sequence=myseq;
select, flag=twiss, column=name,s, dx, dy, betx, bety,x , px, y;
twiss, betx=1, bety=1, file="thick.dat";
select, flag=makethin, class=sbend, slice=2, thick=true;
survey, perm_align_survey, file = "survey_thick.dat";
survey, file = "survey_thick_original.dat";

show, s1;
makethin, sequence=myseq;
use, sequence=myseq;
twiss, betx=1, bety=1, file="sliced.dat";
survey, perm_align_survey, file = "survey_thin.dat";
survey, file = "survey_thin_original.dat";
save, sequence=myseq, file="mysliced.seq";


