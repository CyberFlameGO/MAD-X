!TITLE,'Test input for MAD-X';

 eg   :=  100;
 bg   :=  eg/pmass;
 en   := 3.75e-06;
 epsx := en/bg;
 epsy := en/bg;
beam, particle = proton, energy =   eg        , 
                         sigt=      0.077     , 
                         sige=      1.1e-4    , 
                         npart=     1.05e11   , 
                         exn=4*en,  eyn=4*en  , 
                         kbunch = 10,
                         et = 0.002, bv = -1,
                         ex=epsx,   ey=epsy;
value,epsx,epsy;
option,-echo;
call file=fv9.opt;  // string without blanks does not need ".."
call file="fv9.seq";
option,echo;

use,period=fivecell;
// alignment errors

select,flag=error,clear;
select,flag=error,pattern="q.*",range=qf.1;
ealign,dx=0.0001;
select,flag=error,class=quadrupole,range=qf.4/qf.5;
ealign,dy=0.0002,dtheta=0.0003;

