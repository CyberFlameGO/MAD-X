# MAD-X custom macro-rules

# recursive make defining PRJNAME
ifeq ($(origin PRJNAME),file)

GCDIR := gc-7.2f

ifeq ($(OSTYPE),Linux)
include Makefile_lnx
endif

ifeq ($(OSTYPE),Darwin)
include Makefile_mac
endif

ifeq ($(OSTYPE),Windows)
$(error libgc separate built is not supported on $(OSTYPE))
endif

ifeq ($(OSTYPE),Cygwin)
$(error libgc separate built is not supported on $(OSTYPE))
endif

# not mandatory
-include Makefile_local

endif

# end of makefile
