# |
# o---------------------------------------------------------------------o
# |
# | MAD GC makefile for Mac OS X
# |
# o---------------------------------------------------------------------o
# |
# | Garbage collector for MAD-X (Boehm GC)
# |
# | For more information, see http://cern.ch/mad
# |
# o---------------------------------------------------------------------o
# |
# | $Id$
# |

#
# MacOSX
#
ifneq ($(OSTYPE),Darwin)
$(error *** garbage collector not supported on $(OSTYPE))
endif

$(PROJECT):     libgc-intel

libgc-intel:    libgc-intel32 libgc-intel64
libgc-gnu:      libgc-gnu32   libgc-gnu64

libgc-%32:      ARCH := 32
libgc-%64:      ARCH := 64

cleanarch:
	$E "** Cleaning binaries and libraries"
	$_ $(RM) $(wildcard libgc32* libgc64* libgc-macosx*)

libgc-intel32 libgc-intel64:
	$E "*** Building $@"
	$_ cd gc ; \
	env CC="icc -m$(ARCH)" ./configure --enable-static --disable-shared --disable-threads --with-pic ; \
	make clean ; make ; make check ; cd - ; \
	cp -f gc/.libs/libgc.a libgc-macosx$(ARCH)-intel.a ; \
	ln -sf libgc-macosx$(ARCH)-intel.a libgc$(ARCH)-intel.a

libgc-gnu32 libgc-gnu64:
	$E "*** Building $@"
	$_ cd gc ; \
	env CC="gcc -m$(ARCH)" ./configure --enable-static --disable-shared --disable-threads --with-pic ; \
	make clean ; make ; make check ; cd - ; \
	cp -f gc/.libs/libgc.a libgc-macosx$(ARCH)-gnu.a ; \
	ln -sf libgc-macosx$(ARCH)-gnu.a libgc$(ARCH)-gnu.a

# end of makefile
