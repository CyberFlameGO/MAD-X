# madx
.PHONY:   madx-win
.PHONY:   madx-win32.exe
madx-win: madx-win32.exe

madx-win32.exe:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory ARCH=32 ONLINE=no STATIC=yes GNU=yes APPENDLD=yes && \
     $(CP) madx32 $@

# numdiff
.PHONY:       numdiff-win
.PHONY:       numdiff-win32.exe
numdiff-win:  numdiff-win32.exe

numdiff-win32.exe:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory ARCH=32 ONLINE=no STATIC=yes GNU=yes APPENDLD=yes && \
     $(CP) tools/numdiff/numdiff32 $@ && ln -sf $@ numdiff32

