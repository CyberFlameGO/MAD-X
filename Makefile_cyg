#
# all
#
.PHONY: all-win

all-win:  madx-win numdiff-win

#
# madx
#
.PHONY:   madx-win
.PHONY:   madx-win32.exe
madx-win: madx-win32.exe

madx-win%: MAKE_OPTS = -j5
madx-win%: MAKE_ARGS = PRJNAME=$@ DESTDIR=$(DESTDIR) ONLINE=no STATIC=yes APPENDLD=yes
madx-win%: MAKE_POST = $(if $(DESTDIR),$(CP) $(DESTDIR)$@ $@ &&,) $(CP) $@

madx-win32.exe:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=32 GNU=yes && $(MAKE_POST) madx32.exe

#
# numdiff
#
.PHONY:       numdiff-win
.PHONY:       numdiff-win32.exe
numdiff-win:  numdiff-win32.exe

numdiff-win%: DESTDIR  := $(DESTDIR)tools$/numdiff
numdiff-win%: MAKE_OPTS = -j5 --no-print-directory -C tools/numdiff
numdiff-win%: MAKE_ARGS = PRJNAME=$@ DESTDIR=..$/..$/$(DESTDIR) APPENDLD=yes
numdiff-win%: MAKE_POST = $(if $(DESTDIR),$(CP) $(DESTDIR)$/$@ $@ &&,) $(CP) $@

numdiff-win32.exe:
	$E "*** Building $@"
	$_ $(MAKE) $(MAKE_OPTS) $(MAKE_ARGS) ARCH=32 GNU=yes && $(MAKE_POST) numdiff32.exe

