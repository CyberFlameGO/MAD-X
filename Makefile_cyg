# madx
.PHONY:       madx-dev-win
.PHONY:       madx-dev-win32.exe
madx-dev-win: madx-dev-win32.exe

madx-dev-win32.exe:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory ARCH=32 ONLINE=no STATIC=yes GNU=yes APPENDLD=yes && \
     $(MV) madx32 $@ && ln -sf $@ madx32

# numdiff
.PHONY:           numdiff-dev-win
.PHONY:           numdiff-dev-win32.exe
numdiff-dev-win:  numdiff-dev-win32.exe

numdiff-dev-win32.exe:
	$E "*** Building $@"
	$_ $(MAKE) --no-print-directory ARCH=32 ONLINE=no STATIC=yes GNU=yes APPENDLD=yes && \
     $(MV) tools$/numdiff$/numdiff32 $@ && ln -sf $@ numdiff32

